f=open("26_1.txt") #открываем файл
n=int(f.readline()) #считываем количество заявок
a=[] #создаём список, в котором будет хранится каждый кандидат

for i in range(n): #цикл, который считает все строчки и добавит их в список a
    year,rs1,rs2,rs3=map(int,f.readline().split())
    a.append([year,rs1,rs2,rs3])
    
a.sort(reverse=1) #т.к. нам нужны только лучшие результаты, то мы сортируем по убыванию

q=[] #список прошедших
q.append(a[0]) #по условию первый кандидат может проходить только по первым двум критериям
a.pop(0) #удаляем первого, так как он уже прошёл

for year,rs1,rs2,rs3 in a: #цикл, который пройдёт по всем заявкам
    res_n=sum(q[-1][1:]) #результаты кандидата на n-ое место
    res_n1=rs1+rs2+rs3 #результаты кандидата на n+1 место
    if abs(res_n-res_n1)==year%100: #проверка 3 критерия
        q.append([year,rs1,rs2,rs3]) #если прошло, то добавляем в список
        
print(sum(q[0][1:]),len(q)) #вывод ответа
